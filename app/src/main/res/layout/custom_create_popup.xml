<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/popup_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/popuplayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_puzzle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spookyfont"
        android:text="Create your puzzle"
        android:textAlignment="center"
        android:textColor="#ff9800"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />
    <TextView
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/create_puzzle_text"
        app:layout_constraintStart_toStartOf="@+id/create_puzzle_text"
        app:layout_constraintTop_toBottomOf="@+id/create_puzzle_text"
        android:id="@+id/name_puzzle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Do you want to name your puzzle?"
        android:textColor="@color/black"
        android:textAlignment="center"
        />
    <EditText
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@id/name_puzzle_text"
        app:layout_constraintStart_toStartOf="@id/name_puzzle_text"
        app:layout_constraintTop_toBottomOf="@+id/name_puzzle_text"
        android:background="@drawable/edit_text_back"
        android:id="@+id/create_name_EDT"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name Here"
        android:fontFamily="@font/spookyfont"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/create_done_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/green_button"
        android:fontFamily="@font/spookyfont"
        android:text="Done"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_name_EDT" />

    <ImageView
        android:id="@+id/circle_cancel_create_popup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/canclebtn"
        app:layout_constraintEnd_toEndOf="@+id/bg_image"
        app:layout_constraintTop_toTopOf="@+id/bg_image" />


</androidx.constraintlayout.widget.ConstraintLayout>