<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<com.facebook.drawee.view.SimpleDraweeView-->
        <!--android:id="@+id/ll"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:visibility="gone" />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:background="@drawable/sixboxbackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="26sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Puzzle"
            app:layout_constraintBottom_toTopOf="@+id/image_two"
            app:layout_constraintEnd_toEndOf="@+id/image_three"
            app:layout_constraintStart_toStartOf="@+id/image_one"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/image_one"
            android:layout_width="@dimen/puzzle_box_width"
            android:layout_height="@dimen/puzzle_box_height"
            android:layout_marginTop="24dp"
            android:padding="3dp"
            android:background="@drawable/image_box"
            app:layout_constraintBottom_toTopOf="@+id/image_four"
            app:layout_constraintEnd_toStartOf="@+id/image_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.541" />
        <ImageView
            android:id="@+id/image_two"
            android:layout_width="@dimen/puzzle_box_width"
            android:layout_height="@dimen/puzzle_box_height"
            android:background="@drawable/image_box"
            android:padding="3dp"
            app:layout_constraintEnd_toStartOf="@+id/image_three"
            app:layout_constraintStart_toEndOf="@id/image_one"
            app:layout_constraintTop_toTopOf="@id/image_one" />

        <ImageView
            android:id="@+id/image_three"
            android:layout_width="@dimen/puzzle_box_width"
            android:layout_height="@dimen/puzzle_box_height"
            android:layout_marginEnd="8dp"
            android:padding="3dp"
            android:background="@drawable/image_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_two"
            app:layout_constraintTop_toTopOf="@id/image_one" />

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/image_one"
            app:layout_constraintStart_toStartOf="@+id/image_one"
            app:layout_constraintTop_toBottomOf="@+id/image_one"
            android:textColor="@color/black"
            android:id="@+id/puzzle_name_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/image_two"
            app:layout_constraintStart_toStartOf="@+id/image_two"
            app:layout_constraintTop_toBottomOf="@+id/image_two"
            android:textColor="@color/black"
            android:id="@+id/puzzle_name_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/image_three"
            app:layout_constraintStart_toStartOf="@+id/image_three"
            app:layout_constraintTop_toBottomOf="@+id/image_three"
            android:textColor="@color/black"
            android:id="@+id/puzzle_name_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/image_four"
            app:layout_constraintStart_toStartOf="@+id/image_four"
            app:layout_constraintTop_toBottomOf="@+id/image_four"
            android:id="@+id/puzzle_name_four"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/image_five"
            app:layout_constraintStart_toStartOf="@+id/image_five"
            app:layout_constraintTop_toBottomOf="@+id/image_five"
            android:id="@+id/puzzle_name_five"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/image_six"
            app:layout_constraintStart_toStartOf="@+id/image_six"
            app:layout_constraintTop_toBottomOf="@+id/image_six"
            android:id="@+id/puzzle_name_six"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_four"
            android:layout_width="@dimen/puzzle_box_width"
            android:layout_height="@dimen/puzzle_box_height"
            android:layout_marginBottom="8dp"
            android:padding="3dp"
            android:background="@drawable/image_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/image_one"
            app:layout_constraintTop_toBottomOf="@+id/puzzle_name_one"
            app:layout_constraintVertical_bias="0.283" />
        <ImageView
            android:id="@+id/image_five"
            app:layout_constraintEnd_toStartOf="@+id/image_six"
            app:layout_constraintStart_toEndOf="@+id/image_four"
            app:layout_constraintTop_toTopOf="@+id/image_four"
            android:background="@drawable/image_box"
            android:padding="3dp"
            android:layout_width="@dimen/puzzle_box_width"
            android:layout_height="@dimen/puzzle_box_height" />

        <ImageView
            android:id="@+id/image_six"
            android:layout_width="@dimen/puzzle_box_width"
            android:layout_height="@dimen/puzzle_box_height"
            android:layout_marginEnd="8dp"
            android:padding="3dp"
            android:background="@drawable/image_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_five"
            app:layout_constraintTop_toTopOf="@+id/image_four" />


        <ImageView
            android:id="@+id/save_image_uri"
            android:layout_width="@dimen/puzzle_box_width"
            android:layout_height="@dimen/puzzle_box_height"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:background="@drawable/image_box"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_five"
            app:layout_constraintTop_toTopOf="@+id/image_four" />



        <ImageView
            android:id="@+id/homebtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@mipmap/homebutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>